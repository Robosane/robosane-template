<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "http://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="4.0.1" type="template" method="upgrade" client="site">
        <name>Robosane ED24</name>
        <version>4.0.1</version>
        <creationDate>March 2015 to September 2017</creationDate>
        <author>Ben Klein</author>
        <authorEmail>robobenklein@gmail.com</authorEmail>
        <copyright>Copyright (C) Ben Klein, 2017.</copyright>
        <description>A flat, sleek look designed for Robosane.</description>
        <files>
                <filename>index.php</filename>
                <filename>component.php</filename>
                <filename>templateDetails.xml</filename>
                <folder>css</folder>
                <folder>img</folder>
                <folder>js</folder>
                <folder>html</folder>
                <folder>fonts</folder>
                <folder>less</folder>
		        <folder>language</folder>
        </files>
        <positions>
                <position>position-topnav</position><!-- Navigation -->
                <position>position-splash-intro</position><!-- Splash intro -->
                <position>position-content-before</position><!-- Above content -->
                <position>position-content-breadcrumbs</position><!-- Below Content -->
                <position>position-column-right</position><!-- Right sidebar -->
                <position>position-splash-footer</position><!-- Footer Image -->
                <position>footer</position><!-- Footer -->
        </positions>
        <config>
                <fields name="params">
                        <fieldset name="advanced">
                                <field name="siteLogo" type="media" default=""
                                        label="Site Logo"
                                        description="Logo to be used at the left of the navbar. Width is always 60px. Best fit: 1w:1.3h ratio." />

                                <field name="headerBackground" type="media" default=""
                                        label="Header Image"
                                        description="Picture to use as the header background, if there is a module in the splash header position." />

                                <field name="footerImage" type="media" default=""
                                        label="Footer Image"
                                        description="The Image to use as the footer for the page, if there are modules in the 'footer-image' position." />

                                <field name="sitename" type="text" default="sitename"
                                        label="Site Display Name"
                                        description="The text to display in the navbar next to the Site Logo."
                                        filter="string" />

                        </fieldset>
                </fields>
        </config>
</extension>
